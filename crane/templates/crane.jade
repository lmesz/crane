doctype html
html(ng-app="crane")
  head
    title= Crane
    meta(name="viewport" content="width=device-width, initial-scale=1.0")

    link(href="css/bootstrap.css", rel="stylesheet")
    link(href="css/crane.css" rel="stylesheet")

    script(src="js/lib/jquery.min.js")
    script(src="js/lib/jquery-ui.min.js")
    script(src="js/lib/angular.min.js")
    script(src="js/lib/angular-route.min.js")
    script(src="js/lib/bootstrap.min.js")
    script(src="js/lib/ui-bootstrap-tpls-0.13.0.min.js")

    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.7/styles/default.min.css')
    script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.7/highlight.min.js')
    script(src='http://pc035860.github.io/angular-highlightjs/angular-highlightjs.min.js')


    script(src="js/app.js")
    script(src="js/controllers/menu.js")
    script(src="js/controllers/imagesearch.js")
    script(src="js/controllers/repository.js")
    script(src="js/controllers/templates.js")
    script(src="js/controllers/hosts.js")
    script(src="js/controllers/containers.js")
    script(src="js/controllers/registry.js")
    script(src="js/controllers/environments.js")
    script(src="js/controllers/index.js")
  body
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar-collapse-handler', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Crane
        #navbar-collapse-handler.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#index", data-toggle="collapse", data-target="#navbar-collapse-handler") Home
            li
              a(href="#hosts", data-toggle="collapse", data-target="#navbar-collapse-handler") Hosts
            li
              a(href="#environments", data-toggle="collapse", data-target="#navbar-collapse-handler") Environments
            li
              a(href="#containers", data-toggle="collapse", data-target="#navbar-collapse-handler") Containers
            li
              a(href="#templates", data-toggle="collapse", data-target="#navbar-collapse-handler") Templates
            li
              a(href="#registry", data-toggle="collapse", data-target="#navbar-collapse-handler") Registry
    ng-view
